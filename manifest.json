{
	"_version": "1.18.0",
	"sap.app": {
		"id": "V2.Healthy.Pregnancy.Program.Sign.Up.V2",
		"type": "card",
		"title": "V2 Healthy Pregnancy Program Sign Up Version2",
		"subTitle": "",
		"applicationVersion": {
			"version": "1.2.0"
		},
	    "shortTitle": "A short title for this Card",
	    "info": "Additional information about this Card",
	    "description": "A long description for this Card",
	    "tags": {
	        "keywords": [
		        "Adaptive",
		        "Card",
		        "Form",
		        "Sample",
		        "Submit",
		        "Actions"
	        ]
	    }
	},
	"sap.ui": {
		"technology": "UI5",
        "deviceTypes": {"desktop": true, "phone": true, "tablet": true},
		"icons": {
			"icon": "sap-icon://wounds-doc"
		}
	},
    "sap.card": {
	"configuration": {
	  "actionHandlers": {
		"submit": {
		  "url": "./samples/adaptive/action-submit.json",
		  "method": "GET"
		}
	  }
	},
	"type": "AdaptiveCard",
	"header": {
			"title": "Healthy Pregnancy Program Sign Up"
		},
	"content": {
	  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
	  "type": "AdaptiveCard",
	  "version": "1.0",
	  "body": [
		{
		  "type": "TextBlock",
		  "text": "Name:",
		  "isSubtle": true,
		  "size": "medium"
		},
		{
		  "type": "Input.Text",
		  "placeholder": "First name, Last name",
		  "style": "text",
		  "id": "SimpleVal"
		},
		{
		  "type": "TextBlock",
		  "text": "Email Address:",
		  "isSubtle": true,
		  "size": "medium"
		},
		{
		  "type": "Input.Text",
		  "placeholder": "youremail@example.com",
		  "style": "email",
		  "id": "EmailVal"
		},
		{
		  "type": "TextBlock",
		  "text": "Phone Number:",
		  "isSubtle": true,
		  "size": "medium"
		},
		{
		  "type": "Input.Text",
		  "placeholder": "++972 52 3283081",
		  "style": "tel",
		  "id": "TelVal",
		  "maxLength": 10
		}
	  ],
	  "actions": [
		{
		  "type": "Action.Submit",
		  "title": "Sign Up"
		}
	  ]
	}
  },
    "sap.platform.mobilecards": {
        "compatible": true
    }
}
